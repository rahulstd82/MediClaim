# Environment Variables for Medical Claims Processor
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration
GOOGLE_API_KEY=your-google-api-key-here

# Admin Configuration
ADMIN_PASSWORD=your-secure-admin-password-here

# Application Configuration
APP_TITLE=Medical Claims Processor
APP_DESCRIPTION=AI-powered medical reimbursement claim verification
DEFAULT_CURRENCY=INR

# Processing Configuration
MAX_FILE_SIZE_MB=20
MAX_DAILY_REQUESTS=1500
REQUEST_TIMEOUT_SECONDS=30

# Database Configuration (if needed in future)
# DATABASE_URL=sqlite:///claims.db

# Email Configuration (if needed for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Development/Production Mode
ENVIRONMENT=development
DEBUG=True